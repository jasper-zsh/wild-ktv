#:kivy 2.3.0
<SongCard>:
    size_hint: None, None
    size: 300, 100
    padding: 20, 10
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.5
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: root.song.name if root.song else ''
        size: self.texture_size
        size_hint: None, None
        font_size: 20
    Label:
        text: '/'.join([artist.name for artist in root.song.artists]) if root.song else ''
        size: self.texture_size
        size_hint: None, None
        font_size: 15
    Label:
        text: ' '.join([tag.name for tag in root.song.tags]) if root.song else ''
        size: self.texture_size
        size_hint: None, None
        font_size: 15