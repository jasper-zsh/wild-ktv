#:kivy 2.3.0
<TopBar>:
    size_hint: (1, None)
    height: 50
    Button:
        text: 'Back'
        on_release: app.nav_back()
    CustomTextInput:
        id: keyword
        on_focus: root.on_focus(args[1])
        on_click: root.show_keyboard()
    Button:
        text: 'Search'
        on_release: root.on_search(keyword.text)