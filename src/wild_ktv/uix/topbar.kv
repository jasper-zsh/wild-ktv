#:kivy 2.3.0
<TopBar>:
    size_hint: (1, None)
    height: 50
    Button:
        width: 50
        size_hint_x: None
        text: 'Back'
        on_release: app.nav_back()
    CustomTextInput:
        id: keyword
        multiline: False
        on_focus: root.on_focus(args[1])
        on_click: root.show_keyboard()
        on_text_validate: root.on_enter(args[0])