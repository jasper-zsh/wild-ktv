#:kivy 2.3.0
#:import AlbumCard wild_ktv.uix.album.AlbumCard
#:import math math
<AlbumScreen>:
    recycle_view: recycle_view
    ScrollView:
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: '歌单'
                size: self.texture_size
                size_hint: None, None
                font_size: 20
            RecycleView:
                id: recycle_view
                viewclass: 'AlbumCard'
                RecycleGridLayout:
                    key_size: 'size'
                    cols: max(1, math.floor(self.width / 310))
                    spacing: 10
                    default_size: None, None
                    default_size_hint: None, None
                    size_hint_y: None
                    height: self.minimum_height