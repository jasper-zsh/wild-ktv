#:kivy 2.3.0
#:import NavBar wild_ktv.uix.navbar.NavBar
#:import TopBar wild_ktv.uix.topbar.TopBar
#:import ControlBar wild_ktv.uix.controlbar.ControlBar
#:import ArtistScreen wild_ktv.screen.artist.ArtistScreen
#:import TagScreen wild_ktv.screen.tag.TagScreen
#:import SearchScreen wild_ktv.screen.search.SearchScreen
#:import SongListScreen wild_ktv.screen.song_list.SongListScreen
#:import ManageScreen wild_ktv.screen.manage.ManageScreen
#:import AlbumScreen wild_ktv.screen.album.AlbumScreen
<MainScreen>:
    BoxLayout:
        NavBar:
        BoxLayout:
            orientation: 'vertical'
            TopBar:
            BoxLayout:
                id: main_container
                orientation: 'vertical'
                ScreenManager:
                    id: sm
                    AlbumScreen:
                        name: 'albums'
                    ArtistScreen:
                        name: 'artists'
                    TagScreen:
                        name: 'tags'
                    SearchScreen:
                        name: 'search'
                    SongListScreen:
                        name: 'song_list'
                    ManageScreen:
                        name: 'manage'
            ControlBar:
                main_screen_manager: app.main_screen_manager