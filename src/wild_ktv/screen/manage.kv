#:kivy 2.3.0
<ManageScreen>:
    StatsView:
        id: container

<StatsView>:
    orientation: 'vertical'

<Row>:
    height: 30
    size_hint_y: None
    spacing: 10
    Label:
        text: root.label
    Label:
        text: root.value
    Button:
        text: root.action_text
        on_release: root._on_action()